<% content_for :title, "Projects" %>

<h1 class="text-2xl font-bold mb-6">Projects</h1>

<div class="grid grid-cols-4 gap-4 text-sm font-semibold text-gray-600 border-b border-gray-300 pb-2 mb-2">
  <div>Title</div>
  <div>Status</div>
  <div>Created</div>
  <div class="text-right">Actions</div>
</div>

<% @projects.each do |project| %>
  <div class="grid grid-cols-4 gap-4 items-center py-3 border-b border-gray-200 hover:bg-gray-50 transition">
    <div class="text-gray-900 font-medium"><%= project.title %></div>
    <div class="text-gray-600"><%= project.status %></div>
    <div class="text-gray-500 text-sm"><%= project.created_at.strftime("%b %d, %Y") %></div>
    <div class="text-right space-x-2">
      <%= link_to 'Show', project, class: "text-blue-600 hover:underline text-sm" %>
      <%= link_to 'Edit', edit_project_path(project), class: "text-yellow-600 hover:underline text-sm" %>
      <%= button_to 'Destroy', project_path(project), method: :delete, data: { turbo_confirm: 'Are you sure?' },  class: "text-red-600 hover:underline text-sm" %>
    </div>
  </div>
<% end %>

<div class="mt-6">
  <%= link_to "New Project", new_project_path, class: "inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
</div>

