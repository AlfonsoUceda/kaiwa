<% flash.each do |key, message| %>
  <% color_classes = {
    notice: "bg-green-50 text-green-800 border-green-300",
    alert: "bg-red-50 text-red-800 border-red-300",
    error: "bg-red-50 text-red-800 border-red-300",
    success: "bg-green-50 text-green-800 border-green-300",
    warning: "bg-yellow-50 text-yellow-800 border-yellow-300"
  } %>

  <div class="max-w-2xl mx-auto my-4 px-4 py-3 border rounded-lg shadow-sm <%= color_classes[key.to_sym] || 'bg-gray-50 text-gray-800 border-gray-300' %>">
    <p class="text-sm font-medium"><%= message %></p>
  </div>
<% end %>
